#include "push_swap.h"

/*
 * Retorna o tamanho (número de nós) de uma stack.
 */
int	stack_len(t_stack *stack)
{
	int		i;

	i = 0;
	while (stack)
	{
		i++;
		stack = stack->next;
	}
	return (i);
}

/*
 * Retorna o último nó da stack (ou NULL se vazia).
 */
t_stack	*find_last(t_stack *stack)
{
	if (!stack)
		return (NULL);
	while (stack->next)
		stack = stack->next;
	return (stack);
}

/*
 * Encontra e retorna o nó com menor valor (ou NULL se vazia).
 */
t_stack	*find_min(t_stack *stack)
{
	t_stack	*min;

	if (!stack)
		return (NULL);
	min = stack;
	while (stack)
	{
		if (stack->value < min->value)
			min = stack;
		stack = stack->next;
	}
	return (min);
}

/*
 * Encontra e retorna o nó com maior valor (ou NULL se vazia).
 */
t_stack	*find_max(t_stack *stack)
{
	t_stack	*max;

	if (!stack)
		return (NULL);
	max = stack;
	while (stack)
	{
		if (stack->value > max->value)
			max = stack;
		stack = stack->next;
	}
	return (max);
}
